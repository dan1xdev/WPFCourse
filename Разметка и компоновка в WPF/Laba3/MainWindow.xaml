<Window x:Class="Laba3.MainWindow"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba3"
        mc:Ignorable="d"
        Title="Заметки" Height="490" Width="800">

    <StackPanel Orientation="Vertical">
        <!-- Список заметок (верхняя часть) -->
        <ListBox x:Name="ListBox" 
                 Height="300"
                 Margin="0"
                 ItemsSource="{Binding Items}" 
                 SelectionChanged="ListBox_SelectionChanged"/>

        <!-- Нижняя панель с полем ввода и кнопками -->
        <StackPanel Orientation="Horizontal" Margin="0">
            <!-- Поле ввода -->
            <TextBox x:Name="MainTextField" 
                     Width="505"
                     Height="150"
                     Margin="0,0,0,0"
                     TextWrapping="Wrap" 
                     FontSize="16" 
                     BorderBrush="#FF0040FF"/>

            <!-- Кнопки -->
            <StackPanel Orientation="Vertical" Width="296">
                <Button x:Name="AddBtn" 
                        Content="Добавить" 
                        Height="44" 
                        Background="#FF0040FF" 
                        Foreground="White"
                        Click="AddBtn_Click"
                        Margin="0,0,0,0"/>

                <Button x:Name="SaveBtn" 
                        Content="Сохранить" 
                        Height="50" 
                        Background="#FF0040FF" 
                        Foreground="White"
                        Click="SaveBtn_Click"
                        Margin="0,0,0,0"/>

                <Button x:Name="DelBtn" 
                        Content="Удалить" 
                        Height="56" 
                        Background="#FF0040FF" 
                        Foreground="White"
                        Click="DelBtn_Click"
                        Margin="0,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>