<Page x:Class="MultiPageForm.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Личные данные">
    <StackPanel Margin="20" Width="300">
        <Label Content="Имя:"/>
        <TextBox x:Name="FirstNameTextBox"/>

        <Label Content="Фамилия:" Margin="0,10,0,0"/>
        <TextBox x:Name="LastNameTextBox"/>

        <Label Content="Дата рождения:" Margin="0,10,0,0"/>
        <DatePicker x:Name="BirthDatePicker"/>

        <Button Content="Далее" Margin="0,20,0,0" Click="NextButton_Click"/>
    </StackPanel>
</Page>