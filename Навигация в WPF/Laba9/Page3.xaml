<Page x:Class="MultiPageForm.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Адрес">
    <StackPanel Margin="20" Width="300">
        <Label Content="Город:"/>
        <TextBox x:Name="CityTextBox"/>

        <Label Content="Улица:" Margin="0,10,0,0"/>
        <TextBox x:Name="StreetTextBox"/>

        <Label Content="Номер дома:" Margin="0,10,0,0"/>
        <TextBox x:Name="HouseNumberTextBox"/>

        <Label Content="Номер квартиры (опционально):" Margin="0,10,0,0"/>
        <TextBox x:Name="ApartmentNumberTextBox"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Назад" Margin="0,0,10,0" Click="BackButton_Click"/>
            <Button Content="Отправить" Click="SubmitButton_Click"/>
        </StackPanel>
    </StackPanel>
</Page>